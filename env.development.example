# ============================================
# GestaoVersus - Configuração DESENVOLVIMENTO
# ============================================
# Arquivo de exemplo para ambiente local
# Valores simplificados para desenvolvimento
# ============================================

# ==========================================
# Flask Configuration
# ==========================================
FLASK_APP=app_pev.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=dev-secret-key-not-for-production

# ==========================================
# Database Configuration (PostgreSQL Dev)
# ==========================================
DEV_POSTGRES_DB=bd_app_versus_dev
DEV_POSTGRES_USER=postgres
DEV_POSTGRES_PASSWORD=dev_password
DATABASE_URL=postgresql://postgres:dev_password@db_dev:5432/bd_app_versus_dev

# ==========================================
# Redis Configuration (Dev - Sem senha)
# ==========================================
REDIS_URL=redis://redis_dev:6379/0
CELERY_BROKER_URL=redis://redis_dev:6379/0
CELERY_RESULT_BACKEND=redis://redis_dev:6379/1

# ==========================================
# Email Configuration (MailHog para testes)
# ==========================================
MAIL_SERVER=mailhog
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=dev@localhost

# ==========================================
# AI Integration (Dev - Opcional)
# ==========================================
AI_PROVIDER=openai
AI_API_KEY=sk-test-key-or-leave-empty
AI_WEBHOOK_URL=http://localhost:5003/webhooks/ai

# ==========================================
# WhatsApp Integration (Dev - Mock)
# ==========================================
WHATSAPP_PROVIDER=webhook
WHATSAPP_API_KEY=test-key
WHATSAPP_WEBHOOK_URL=http://localhost:5003/webhooks/whatsapp

# ==========================================
# AWS S3 (Dev - Opcional)
# ==========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=gestaoversos-dev-backups
AWS_REGION=us-east-1

# ==========================================
# Google Cloud (Dev - Opcional)
# ==========================================
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=
GCS_BUCKET=

# ==========================================
# Application Settings
# ==========================================
UPLOAD_FOLDER=uploads
PDF_TEMP_FOLDER=temp_pdfs
MAX_CONTENT_LENGTH=16777216

# ==========================================
# Security & Rate Limiting (Desabilitado em Dev)
# ==========================================
LOGIN_DISABLED=false
RATELIMIT_ENABLED=false
WERKZEUG_DEBUG_PIN=off

# ==========================================
# Backup Configuration (Dev)
# ==========================================
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 3 * * *

# ==========================================
# Monitoring & Logging
# ==========================================
LOG_LEVEL=DEBUG
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ==========================================
# Development Tools
# ==========================================
ADMINER_ENABLED=true
MAILHOG_ENABLED=true

