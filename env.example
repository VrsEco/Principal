# ============================================
# GestaoVersus - Exemplo de Configuração
# ============================================
# COPIE este arquivo e renomeie para .env
# NUNCA commite o arquivo .env no Git!
# ============================================

# ==========================================
# Flask Configuration
# ==========================================
FLASK_APP=app_pev.py
FLASK_ENV=production
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_DB=bd_app_versus
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@db:5432/bd_app_versus

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
CELERY_BROKER_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/1

# ==========================================
# Email Configuration (SMTP)
# ==========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-app-gmail
MAIL_DEFAULT_SENDER=seu-email@gmail.com

# ==========================================
# AI Integration (OpenAI/Anthropic)
# ==========================================
AI_PROVIDER=openai
AI_API_KEY=sk-your-openai-api-key
AI_WEBHOOK_URL=

# ==========================================
# WhatsApp Integration (Z-API ou Twilio)
# ==========================================
WHATSAPP_PROVIDER=z-api
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_WEBHOOK_URL=

# ==========================================
# AWS S3 (Backup e Storage)
# ==========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=gestaoversos-backups
AWS_REGION=us-east-1

# ==========================================
# Google Cloud (Alternativa ao AWS)
# ==========================================
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-key.json
GCS_BUCKET=gestaoversos-backups

# ==========================================
# Application Settings
# ==========================================
UPLOAD_FOLDER=uploads
PDF_TEMP_FOLDER=temp_pdfs
MAX_CONTENT_LENGTH=16777216

# ==========================================
# Security & Rate Limiting
# ==========================================
LOGIN_DISABLED=false
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/2

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 3 * * *

# ==========================================
# Monitoring & Logging
# ==========================================
LOG_LEVEL=INFO
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
