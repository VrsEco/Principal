# ============================================
# GestaoVersus - Dockerfile Desenvolvimento
# ============================================
# Imagem otimizada para desenvolvimento local
# Com hot-reload e ferramentas de debug
# ============================================

FROM python:3.9-slim

# Metadata
LABEL maintainer="GestaoVersus Team"
LABEL version="1.0-dev"
LABEL description="GestaoVersus - Ambiente de Desenvolvimento"

# Configurar variáveis de ambiente
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    FLASK_ENV=development \
    FLASK_DEBUG=1

# Instalar dependências do sistema + ferramentas dev + Playwright dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libpq-dev \
    postgresql-client \
    curl \
    vim \
    git \
    # Playwright browser dependencies
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Criar diretório de trabalho
WORKDIR /app

# Copiar requirements
COPY requirements.txt .

# Instalar dependências Python + ferramentas dev
RUN pip install --upgrade pip && \
    pip install -r requirements.txt && \
    pip install pytest pytest-flask black flake8 ipython ipdb

# Instalar browsers do Playwright
RUN playwright install --with-deps chromium

# Expor porta
EXPOSE 5002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:5002/health || exit 1

# Comando de inicialização (dev server com hot-reload)
CMD ["python", "app_pev.py"]

