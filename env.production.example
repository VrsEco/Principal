# ============================================
# GestaoVersus - Configuração PRODUÇÃO
# ============================================
# Arquivo de exemplo para ambiente de produção
# Valores devem ser configurados no servidor
# ============================================

# ==========================================
# Flask Configuration
# ==========================================
FLASK_APP=app_pev.py
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=USE_RANDOM_256_BIT_KEY_HERE

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
POSTGRES_DB=bd_app_versus_prod
POSTGRES_USER=postgres_prod
POSTGRES_PASSWORD=USE_STRONG_PASSWORD_HERE
DATABASE_URL=postgresql://postgres_prod:USE_STRONG_PASSWORD_HERE@db:5432/bd_app_versus_prod

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=USE_STRONG_REDIS_PASSWORD_HERE
REDIS_URL=redis://:USE_STRONG_REDIS_PASSWORD_HERE@redis:6379/0
CELERY_BROKER_URL=redis://:USE_STRONG_REDIS_PASSWORD_HERE@redis:6379/0
CELERY_RESULT_BACKEND=redis://:USE_STRONG_REDIS_PASSWORD_HERE@redis:6379/1

# ==========================================
# Email Configuration (Production SMTP)
# ==========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=production@congigr.com
MAIL_PASSWORD=USE_APP_PASSWORD_HERE
MAIL_DEFAULT_SENDER=noreply@congigr.com

# ==========================================
# AI Integration
# ==========================================
AI_PROVIDER=openai
AI_API_KEY=sk-prod-your-openai-api-key
AI_WEBHOOK_URL=https://congigr.com/webhooks/ai

# ==========================================
# WhatsApp Integration
# ==========================================
WHATSAPP_PROVIDER=z-api
WHATSAPP_API_KEY=prod-your-whatsapp-api-key
WHATSAPP_WEBHOOK_URL=https://congigr.com/webhooks/whatsapp

# ==========================================
# AWS S3 (Production Backups)
# ==========================================
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=gestaoversos-prod-backups
AWS_REGION=us-east-1

# ==========================================
# Google Cloud (Production)
# ==========================================
GOOGLE_CLOUD_PROJECT=gestaoversos-prod
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-prod-key.json
GCS_BUCKET=gestaoversos-prod-backups

# ==========================================
# Application Settings
# ==========================================
UPLOAD_FOLDER=/app/uploads
PDF_TEMP_FOLDER=/app/temp_pdfs
MAX_CONTENT_LENGTH=16777216

# ==========================================
# Security & Rate Limiting
# ==========================================
LOGIN_DISABLED=false
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=redis://:USE_STRONG_REDIS_PASSWORD_HERE@redis:6379/2
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ==========================================
# SSL/HTTPS Configuration
# ==========================================
FORCE_HTTPS=true
SSL_CERTIFICATE=/etc/nginx/ssl/fullchain.pem
SSL_CERTIFICATE_KEY=/etc/nginx/ssl/privkey.pem

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 3 * * *
BACKUP_STORAGE=s3

# ==========================================
# Monitoring & Logging
# ==========================================
LOG_LEVEL=WARNING
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ==========================================
# Domain Configuration
# ==========================================
DOMAIN_NAME=congigr.com
ALLOWED_HOSTS=congigr.com,www.congigr.com
CORS_ORIGINS=https://congigr.com,https://www.congigr.com

